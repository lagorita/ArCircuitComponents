<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/backbuttonlayout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/geri"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:fillViewport="true"
        android:layout_below="@+id/backbuttonlayout">
        <LinearLayout
            android:id="@+id/testview"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:orientation="vertical"
            android:padding="4dp"
            android:clipChildren="false"
            android:clipToPadding="false" >



            <Button
                android:id="@+id/resistor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direnç"
                android:textAllCaps="false"
                android:textAlignment="center" />
            <!--        android:background="@drawable/circlee"-->


            <Button
                android:id="@+id/capasitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kapasitör"
                android:textAllCaps="false"
                android:padding="4dp" />

            <Button
                android:id="@+id/inductor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bobin"
                android:textAllCaps="false"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/thermistor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Termistör"
                android:textAllCaps="false"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/ldr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto Direnç(LDR)"
                android:textAllCaps="false"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/potentiometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Potansiyometre"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="12dp"
                />


        </LinearLayout>



    </ScrollView>

</RelativeLayout>
